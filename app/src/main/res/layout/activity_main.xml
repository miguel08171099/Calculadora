<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtPantalla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onBtn0Click"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtn1Click"
        android:text="1"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtn0Click"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDegree"
        app:layout_constraintTop_toBottomOf="@+id/btnSuma" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="onBtnDivisionClick"
        android:text="/"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIgual" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtn2Click"
        android:text="2"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtn3Click"
        android:text="3"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSuma"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtn4Click"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtn5Click"
        android:text="5"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtn6Click"
        android:text="6"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btnMultiplicacion"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:onClick="onBtn7Click"
        android:text="7"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:onClick="onBtn8Click"
        android:text="8"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:onClick="onBtn9Click"
        android:text="9"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btnBorrar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="onBtnIgualClick"
        android:text="="
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="onBtnRestaClick"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision" />

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtnSumaClick"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btnResta"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplicacion" />

    <Button
        android:id="@+id/btnSinus"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtnSinusClick"
        android:text="sin"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnCosinus"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btnDegree"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="onBtnDegreeClick"
        android:text="deg"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResta" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:onClick="onBtnDeleteClick"
        android:text="del"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTangente"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtnTangenteClick"
        android:text="tan"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btnResta" />

    <Button
        android:id="@+id/btnMultiplicacion"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:onClick="onBtnMultiplicacionClick"
        android:text="x"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDivision"
        app:layout_constraintTop_toBottomOf="@+id/btnBorrar" />

    <Button
        android:id="@+id/btnCosinus"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:onClick="onBtnCosinusClick"
        android:text="cos"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnTangente"
        app:layout_constraintTop_toBottomOf="@+id/btnSuma" />

    <TextView
        android:id="@+id/textoPantallaPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="54sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textoPantallaSecundaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textoPantallaPrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>